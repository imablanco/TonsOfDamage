<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:id="@+id/cv_left"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_summoner_left"
                android:layout_centerHorizontal="true"
                tools:src = "@drawable/default_profile"
                android:layout_width="40dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_height="40dp" />

            <TextView
                android:padding="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/tv_summoner_left_name"
                android:textColor="@color/colorFallBackAccent"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "Ashe"
                android:layout_below="@id/img_summoner_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_summoner_left_name"
                android:id="@+id/img_solo_q_left"
                android:src="@drawable/base_provisional"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_below="@id/img_solo_q_left"
                android:textStyle="bold"
                android:id="@+id/tv_solo_q_rank_left"
                android:gravity="center"
                android:text="@string/unranked"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginRight="15dp"
        android:id="@+id/cv_middle"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_summoner_middle"
                android:layout_centerHorizontal="true"
                tools:src = "@drawable/default_profile"
                android:layout_width="40dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_height="40dp" />


            <TextView
                android:padding="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/tv_summoner_middle_name"
                android:textColor="@color/colorFallBackAccent"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "Ashe"
                android:layout_below="@id/img_summoner_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_summoner_middle_name"
                android:id="@+id/img_solo_q_middle"
                android:src="@drawable/base_provisional"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_below="@id/img_solo_q_middle"
                android:textStyle="bold"
                android:id="@+id/tv_solo_q_rank_middle"
                android:gravity="center"
                android:text="@string/unranked"
                android:textColor="@color/text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</merge>