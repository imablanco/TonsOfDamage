<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc000000">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="316dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/tv_summoner_name"
                tools:text = "Sympherion"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_view_summoner"
                android:visibility="invisible"
                android:text="@string/view_summoner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_summoner_name"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_champion"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_centerHorizontal="true"
            tools:src = "@drawable/default_profile"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="1dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </RelativeLayout>

</RelativeLayout>