<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/summoner1"
        android:background="?selectableItemBackground"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_summoner1"
            tools:src = "@drawable/default_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_centerVertical="true"
            android:background="@drawable/image_bg"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_centerVertical="true"
            tools:text="Sympherion"
            android:padding="10dp"
            android:layout_toRightOf="@id/img_summoner1"
            android:textColor="@color/white"
            android:id="@+id/tv_summoner_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/summoner2"
        android:background="?selectableItemBackground"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_summoner2"
            tools:src = "@drawable/default_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_centerVertical="true"
            android:background="@drawable/image_bg"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_centerVertical="true"
            tools:text="Sympherion"
            android:padding="10dp"
            android:layout_toRightOf="@id/img_summoner2"
            android:textColor="@color/white"
            android:id="@+id/tv_summoner_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>