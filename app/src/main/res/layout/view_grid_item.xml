<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="140dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimaryDarkAccent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/black"
            tools:src = "@drawable/base_diamond"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:id="@+id/img_item"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_alignTop="@id/img_item"
            android:layout_alignBottom="@id/img_item"
            android:layout_alignLeft="@id/img_item"
            android:layout_alignRight="@id/img_item"
            android:background="@drawable/champion_spell_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_below="@id/img_item"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            tools:text = "Trinity Force"
            android:paddingTop="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_gold"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/ic_coins"
            android:scaleType="fitCenter"
            android:layout_below="@id/tv_item_name"
            android:layout_width="15dp"
            android:layout_height="25dp" />
        <TextView
            android:gravity="center"
            tools:text = "32423424234"
            android:ellipsize="end"
            android:textSize="11sp"
            android:lines="1"
            android:textColor="@color/white"
            android:layout_alignTop="@id/ic_coins"
            android:layout_alignBottom="@id/ic_coins"
            android:layout_toRightOf="@id/ic_coins"
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</android.support.v7.widget.CardView>