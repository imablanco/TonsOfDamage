<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            tools:visibility = "visible"
            android:id="@+id/cv_stats"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summarized_stats"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <com.ablanco.tonsofdamage.ui.views.Separator
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    app:separatorColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/colorAccent" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/games_played" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/green" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/games_won" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/red" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/games_lost" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_games_played"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="256" />

                            <TextView
                                android:id="@+id/tv_games_won"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="187" />

                            <TextView
                                android:id="@+id/tv_games_lost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/dv_games"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:dv_lineWidth="5dp"
                        app:dv_totalAngle="360" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/colorAccent" />


                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_kills" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/red" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/normal_kills" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/green" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/double_kills" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/blue" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/triple_kills" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/magenta" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/quadra_kills" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/white" />

                                <TextView
                                    style="@style/SummonerStatsValueStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/penta_kills" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="256" />

                            <TextView
                                android:id="@+id/tv_normal_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />

                            <TextView
                                android:id="@+id/tv_double_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />

                            <TextView
                                android:id="@+id/tv_triple_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />

                            <TextView
                                android:id="@+id/tv_quadra_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />


                            <TextView
                                android:id="@+id/tv_penta_kills"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:text="45" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/dv_kills"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:dv_lineWidth="5dp"
                        app:dv_totalAngle="360" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>