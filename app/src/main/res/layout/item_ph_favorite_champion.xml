<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:id="@+id/cv_left"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_champion_left"
                android:layout_centerHorizontal="true"
                tools:src = "@drawable/default_profile"
                android:layout_width="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_height="60dp" />

            <TextView
                android:padding="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/tv_champion_left_name"
                android:textColor="@color/colorFallBackAccent"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "Ashe"
                android:layout_below="@id/img_champion_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textAllCaps="true"
                android:id="@+id/tv_champion_left_tags"
                android:textColor="@color/text_color"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "TANK; ASSASING"
                android:layout_below="@id/tv_champion_left_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="invisible"
        tools:visibility="visible"
        android:id="@+id/cv_middle"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_champion_middle"
                android:layout_centerHorizontal="true"
                tools:src = "@drawable/default_profile"
                android:layout_width="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_height="60dp" />


            <TextView
                android:ellipsize="end"
                android:padding="5dp"
                android:lines="1"
                android:id="@+id/tv_champion_middle_name"
                android:textColor="@color/colorFallBackAccent"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "Ashe"
                android:layout_below="@id/img_champion_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:ellipsize="end"
                android:maxLines="3"
                android:textAllCaps="true"
                android:id="@+id/tv_champion_middle_tags"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "TANK; ASSASING"
                android:layout_below="@id/tv_champion_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_marginRight="15dp"
        tools:visibility="visible"
        android:visibility="invisible"
        android:id="@+id/cv_right"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_champion_right"
                android:layout_centerHorizontal="true"
                tools:src = "@drawable/default_profile"
                android:layout_width="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:layout_height="60dp" />


            <TextView
                android:ellipsize="end"
                android:lines="1"
                android:id="@+id/tv_champion_right_name"
                android:textColor="@color/colorFallBackAccent"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "Ashe"
                android:layout_below="@id/img_champion_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:ellipsize="end"
                android:maxLines="3"
                android:textAllCaps="true"
                android:id="@+id/tv_champion_right_tags"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:text = "TANK; ASSASING"
                android:layout_below="@id/tv_champion_right_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</merge>