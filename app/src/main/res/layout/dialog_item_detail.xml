<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc000000">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_bg"
            android:layout_width="316dp"
            android:layout_height="wrap_content">

            <TextView
                tools:text = "Trinity Force"
                android:padding="15dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="15dp"
                android:layout_below="@id/tv_title"
                android:id="@+id/item_img"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <View
                android:background="@drawable/champion_spell_bg"
                android:layout_alignTop="@id/item_img"
                android:layout_alignLeft="@id/item_img"
                android:layout_alignRight="@id/item_img"
                android:layout_alignBottom="@id/item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ic_coins"
                android:scaleType="fitCenter"
                android:layout_alignBottom="@id/item_img"
                android:layout_toRightOf="@id/item_img"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/tv_price"
                android:ellipsize="end"
                android:lines="1"
                android:layout_alignTop="@id/ic_coins"
                tools:text = "1330 (600)"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:layout_alignBottom="@id/ic_coins"
                android:layout_toRightOf="@id/ic_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ScrollView
                android:scrollbars="none"
                android:layout_below="@id/item_img"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        tools:text = "Description of the item"
                        android:textColor="@color/white"
                        android:id="@+id/tv_item_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:text="@string/built_from"
                        android:id="@+id/tv_built_from"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorFallBackAccent"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:id="@+id/ll_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/built_into"
                        android:id="@+id/tv_built_into"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:textColor="@color/colorFallBackAccent"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:id="@+id/ll_into"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

</RelativeLayout>